<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layoutAddNewTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/lblAddNewTripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add New Trip"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imgViewAddNewTrip"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/alert_dark_frame" />

        <Button
            android:id="@+id/btnUploadNewTripImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Choose Trip Image"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <EditText
            android:id="@+id/txtAddNewTripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter trip name.."
            android:padding="10dp" />

        <EditText
            android:id="@+id/txtAddNewTripLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Enter trip location.." />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <Button
                android:id="@+id/btnAddNewTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Add Trip"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/btnCancelAddTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Cancel"
                android:textStyle="normal|bold"
                android:layout_alignLeft="@+id/btnAddNewTrip"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/btnUpdateTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Update Trip"
                android:textStyle="normal|bold" />

            <Button
                android:id="@+id/btnCancelUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Update Trip"
                android:textStyle="normal|bold" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEditTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/lblNewTripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip Name Here"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/imgViewEditTrip"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@android:drawable/alert_dark_frame" />

        <Button
            android:id="@+id/btneEditTripImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Change Trip Image"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/txtEditTripName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Trip Name"
            android:padding="10dp" />

        <TextView
            android:id="@+id/txtEditTripLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Trip location" />

        <Button
            android:id="@+id/btnEditTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Edit Trip"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/btnCloseTripAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Close"
            android:textStyle="normal|bold" />

    </LinearLayout>
</LinearLayout>