<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uncc.chatapplication.PlacesActivity">

    <Button
        android:id="@+id/buttonDisplayTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="19dp"
        android:text="@string/display_trip_label"
        android:textColor="?android:attr/colorActivatedHighlight"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonAddPlaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_places_label"
        android:textColor="?android:attr/colorActivatedHighlight"
        android:layout_alignBaseline="@+id/buttonDisplayTrip"
        android:layout_alignBottom="@+id/buttonDisplayTrip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        tools:ignore="RelativeOverlap,RtlHardcoded">

    </Button>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewPlaces"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonDisplayTrip"
        android:layout_marginTop="23dp"
        android:orientation="vertical" />
</RelativeLayout>
