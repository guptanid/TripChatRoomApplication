<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgSearchedUserPic"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/dialog_holo_light_frame" />

    <TextView
        android:id="@+id/txtSearchedUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgSearchedUserPic"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/imgSearchedUserPic"
        android:layout_toLeftOf="@+id/btnPeopleListAddFriend"
        android:layout_toRightOf="@+id/imgSearchedUserPic"
        android:text="TextView"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnPeopleListAddFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgSearchedUserPic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Add Friend" />

    <TextView
        android:id="@+id/txtSearchedAlreadyFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtSearchedUserName"
        android:layout_alignLeft="@+id/btnPeopleListAddFriend"
        android:layout_alignStart="@+id/btnPeopleListAddFriend"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtSearchedFriendRequestSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtSearchedAlreadyFriends"
        android:layout_alignRight="@+id/txtSearchedAlreadyFriends"
        android:layout_alignTop="@+id/txtSearchedAlreadyFriends"
        android:text="Request Sent"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSearchedAcceptRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPeopleListAddFriend"
        android:layout_alignLeft="@+id/btnPeopleListAddFriend"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/btnPeopleListAddFriend"
        android:text="Pending Request"
        android:visibility="gone" />

</RelativeLayout>